@model IEnumerable<TaskFlow.Models.TaskItem>

@{
    ViewData["Title"] = "Task List";
}

<h2>Task List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Task</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th><a asp-action="Index" asp-route-sortBy="title">Title ⬍</a></th>
            <th>Description</th>
            <th><a asp-action="Index" asp-route-sortBy="status">Status ⬍</a></th>
            <th><a asp-action="Index" asp-route-sortBy="created_at">Created At ⬍</a></th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@(item.IsCompleted ? "✅" : "❌")</td>
                <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    @if (!item.IsCompleted)
                    {
                        <form asp-action="MarkAsComplete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-success btn-sm">Complete</button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="UndoCompletion" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-warning btn-sm">Undo</button>
                        </form>
                    }
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
